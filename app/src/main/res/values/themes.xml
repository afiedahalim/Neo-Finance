<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NeoVehicleLoan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/brand_red</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSecondary">@color/brand_red_light</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@color/brand_red_dark</item>
        <item name="android:navigationBarColor">@color/nav_bar_red</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background -->
        <item name="android:windowBackground">@drawable/company_bg</item>

        <!-- Global Font -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>

        <!-- Global Components -->
        <item name="materialButtonStyle">@style/NeoButton</item>
        <item name="textAppearanceBodyMedium">@style/TextBody</item>
        <item name="textAppearanceHeadlineMedium">@style/TextTitle</item>
    </style>


    <!-- Button Style -->
    <style name="NeoButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/brand_red</item>
        <item name="android:textColor">@color/text_white</item>

        <!-- M3 shape -->
        <item name="shapeAppearanceOverlay">@style/NeoButtonShape</item>
    </style>

    <style name="NeoButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>


    <!-- Typography -->
    <style name="TextTitle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_gray_light</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

</resources>